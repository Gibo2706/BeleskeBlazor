@page "/"

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">



<div class="container mt-5">
    <h3>Select Subject:</h3>
    <select class="form-select" @bind="selectedSubject">
        <option value="">-- Select Subject --</option>
        @foreach (var subject in subjects)
        {
                <option value="@subject">@subject</option>
        }
    </select>

    @if (!string.IsNullOrEmpty(selectedSubject))
    {
            <div class="mt-3">
                <h3>Select Lesson for @selectedSubject:</h3>
                <select class="form-select" @bind="selectedLesson">
                    <option value="">-- Select Lesson --</option>
                @foreach (var lesson in lessons)
                {
                            <option value="@lesson">@lesson</option>
                }
                </select>

            @if (!string.IsNullOrEmpty(selectedLesson))
            {
                        <div class="mt-3">
                            <button class="btn btn-primary me-2" @onclick="CreateNewNote">Create New Note</button>
                            <button class="btn btn-success" @onclick="ShowAllNotes">Show All Notes</button>
                        </div>
            }
            </div>
    }
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

@code {
    private string selectedSubject;
    private string selectedLesson;

    // Mock data for subjects and lessons
    private List<string> subjects = new List<string> { "Math", "Physics", "Chemistry" };
    private List<string> lessons = new List<string> { "Lesson 1", "Lesson 2", "Lesson 3" };

